    <h3>game is yet to begin!</h3>
<%else%>
    My Score: <%= @scores[current_user.id]%> <br>
    <br>
    <table>
      <tr>
        <td>Total Correct: </td>
        <td><%= @total_correct %></td>
      </tr>
      <tr>
        <td>Total Incorrect: </td>
        <td><%= @total_incorrect%></td>
